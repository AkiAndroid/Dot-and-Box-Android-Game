<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_entryscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.dell.civilwar.entryscreen">

    <include layout="@layout/backgroundvideo2"/>

    <EditText
        android:layout_width="30dp"
        android:digits="12345"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLength="1"
        android:layout_marginTop="178dp"
        android:id="@+id/norow"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/holo_red_dark"
        android:hint="R" />

    <EditText
        android:layout_width="30dp"
        android:digits="123456"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLength="1"
        android:id="@+id/nocol"
        android:layout_alignBaseline="@+id/norow"
        android:layout_alignBottom="@+id/norow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:hint="C" />

    <ImageButton
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/beginwarbutton"
        android:layout_below="@+id/norow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:id="@+id/beginwar" />

    <ImageButton
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menubutton"
        android:id="@+id/backmenu2"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Max 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nocol"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:layout_marginBottom="28dp"
        android:id="@+id/textView" />

    <TextView
        android:text="Max 6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_toLeftOf="@+id/backmenu2"
        android:layout_toStartOf="@+id/backmenu2"
        android:id="@+id/textView2" />


</RelativeLayout>
